
@{
    ViewBag.Title = "Trombone";
}
<link href="~/Content/Styles.css" rel="stylesheet" />

<h2>Trombone</h2>
<img class="viewpic" src="~/Content/Images/trombone.jpg" />

<button class="myButton" id="new" onmouseover="NewPrice()">New</button>

<button class="myButton" id="used" onmouseover="UsedPrice()" onclick="location.href='@Url.Action("Index", "Home")'">Used</button>

<p class="price" id="price"></p>



<script>

    function NewPrice()
    {
        document.getElementById("price").innerHTML = "$" + '@Html.Raw(ViewBag.NewPrice)';
    }

      function UsedPrice()
    {
        document.getElementById("price").innerHTML = "$" + '@Html.Raw(ViewBag.UsedPrice)';
    }

</script>
